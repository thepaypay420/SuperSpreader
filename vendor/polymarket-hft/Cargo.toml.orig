[package]
name = "polymarket-hft"
version = "0.0.6"
edition = "2024"
authors = ["Telepair <liys87x@gmail.com>"]
description = "A high-frequency trading system for Polymarket with built-in API clients (Data API, CLOB, CLOB WebSocket, Gamma, RTDS) and CLI"
repository = "https://github.com/telepair/polymarket-hft"
license = "MIT"
keywords = ["polymarket", "hft", "trading", "prediction-market", "algorithmic-trading"]
categories = ["api-bindings", "asynchronous", "algorithms", "command-line-utilities"]
readme = "README.md"

[dependencies]
reqwest = { version = "0.12", default-features = false, features = ["json", "rustls-tls"] }
reqwest-middleware = { version = "0.4", features = ["json"] }
reqwest-retry = "0.7"
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
tokio = { version = "1", features = ["full"] }
thiserror = "2.0"
url = "2.5"
clap = { version = "4.5", features = ["derive", "env"] }
tracing = "0.1"
tracing-subscriber = { version = "0.3", features = ["env-filter"] }
anyhow = "1.0.100"
tokio-tungstenite = { version = "0.26", features = ["rustls-tls-webpki-roots"] }
futures-util = "0.3"

# Ethereum & Cryptography (for CLOB trading)
alloy-primitives = "0.8"
alloy-signer = "0.5"
alloy-signer-local = "0.5"
alloy-sol-types = "0.8"

# Authentication & Crypto
hmac = "0.12"
sha2 = "0.10"
base64 = "0.22"

# Utilities
chrono = "0.4"
hex = "0.4"
rand = "0.8"

[[bin]]
name = "polymarket"
path = "src/main.rs"

[features]
default = []

[dev-dependencies]
wiremock = "0.6.5"
